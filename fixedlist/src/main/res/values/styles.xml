<resources>

    <style name="MDKWidgetTheme" parent="Theme.AppCompat">
        <item name="mdkValueFixedListStyle">@style/MDKFixedList</item>
        <item name="mdkValueFixedListTitleLayoutStyle">@style/MDKFixedListTitleLayoutStyle</item>
        <item name="mdkValueFixedListTitleStyle">@style/MDKFixedListTitleStyle</item>


        <!-- Fixedlist business attributes -->
        <item name="mdk_b_fixedlistBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistItemBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistAddTint">?attr/mdk_t_primaryColor</item>

        <!-- FixedList title attributes -->
        <item name="mdk_b_fixedListTitleTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_fixedListTitleTextColor">?attr/mdk_t_textColorSecondary</item>
        <item name="mdk_b_fixedListTitleBackground">?attr/mdk_t_noBackground</item>
    </style>


    <style name="MDKWidgetTheme.Light" parent="Theme.AppCompat.Light">
        <item name="mdkValueFixedListStyle">@style/MDKFixedList</item>
        <item name="mdkValueFixedListTitleLayoutStyle">@style/MDKFixedListTitleLayoutStyle</item>
        <item name="mdkValueFixedListTitleStyle">@style/MDKFixedListTitleStyle</item>

        <!-- Fixedlist business attributes -->
        <item name="mdk_b_fixedlistBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistItemBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistAddTint">?attr/mdk_t_primaryColor</item>

        <!-- FixedList title attributes -->
        <item name="mdk_b_fixedListTitleTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_fixedListTitleTextColor">?attr/mdk_t_textColorSecondary</item>
        <item name="mdk_b_fixedListTitleBackground">?attr/mdk_t_noBackground</item>
    </style>


    <style name="MDKWidgetTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="mdkValueFixedListStyle">@style/MDKFixedList</item>
        <item name="mdkValueFixedListTitleLayoutStyle">@style/MDKFixedListTitleLayoutStyle</item>
        <item name="mdkValueFixedListTitleStyle">@style/MDKFixedListTitleStyle</item>

        <!-- Fixedlist business attributes -->
        <item name="mdk_b_fixedlistBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistItemBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_fixedlistAddTint">?attr/mdk_t_primaryColor</item>

        <!-- FixedList title attributes -->
        <item name="mdk_b_fixedListTitleTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_fixedListTitleTextColor">?attr/mdk_t_textColorSecondary</item>
        <item name="mdk_b_fixedListTitleBackground">?attr/mdk_t_noBackground</item>
    </style>


    <!-- FixedList component style -->
    <style name="MDKFixedList" parent="Base.MDKValue.MDKFixedList">
        <item name="android:background">?attr/mdk_b_fixedlistBackground</item>
        <item name="android:tint">?attr/mdk_b_fixedlistAddTint</item>
    </style>

    <!-- FixedList title layout style -->
    <style name="MDKFixedListTitleLayoutStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:background">?attr/mdk_b_fixedListTitleBackground</item>
    </style>

    <!-- FixedList title style -->
    <style name="MDKFixedListTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/mdk_b_fixedListTitleTextSize</item>
        <item name="android:textColor">?attr/mdk_b_fixedListTitleTextColor</item>
    </style>

</resources>