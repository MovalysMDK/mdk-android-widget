<resources>

    <declare-styleable name="RichSelectorAttr">
        <attr name="textWithRichSelector" format="reference"/>
    </declare-styleable>
    
    <!-- Base application theme. -->
    <style name="AppTheme" parent="MDKWidgetTheme.Light.DarkActionBar">

        <item name="mdk_t_primaryColor">@color/blue</item>
        <item name="mdk_t_accentColor">@color/red</item>

        <!-- Customize your theme here. -->
        <item name="textWithRichSelector">@style/TextRichSelector</item>

        <!-- round buttons -->
        <item name="mdk_b_commandBackground">@drawable/round_button</item>
        <item name="mdk_b_primaryCommandBackground">@drawable/round_button</item>
        <item name="mdk_b_secondaryCommandBackground">@drawable/round_button</item>

        <!-- red "negative" commands -->
        <item name="mdk_b_negativeCommandTint">@color/red</item>

        <!--<item name="mdkLabelStyle">@style/CustomLabel</item>-->
    </style>

    <style name="TextRichSelector" parent="Base.MDKValue.MDKValueEditText">
        <item name="selectors">@array/myCustomSelectors</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--<style name="CustomLabel" parent="MDKLabel">
        <item name="android:textColor">?attr/primaryColor</item>
    </style>-->

</resources>
