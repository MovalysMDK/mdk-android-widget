<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.soprasteria.movalysmdk.widget.sample.DateActivity"
    android:id="@+id/root"
    android:orientation="vertical">

    <include layout="@layout/button_bar"/>

    <!-- RichDateTime with label, no hint -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_case_1"/>

    <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
        android:id="@+id/mdkRichDateTime_withLabelAndMandatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mdk:label="@string/app_name"
        mdk:mandatory="true" />

    <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
        android:id="@+id/mdkRichDateTime_withLabelAndNotMandatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mdk:label="@string/app_name" />

    <View
        android:background="@drawable/separator_background"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- RichDate -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_case_2"/>

    <com.soprasteria.movalysmdk.widget.basic.MDKRichDate
        android:id="@+id/mdkRichDate_withLabelAndMandatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mdk:label="@string/app_name"
        mdk:mandatory="true" />

    <View
        android:background="@drawable/separator_background"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <!-- RichTime -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/date_case_3"/>

    <com.soprasteria.movalysmdk.widget.basic.MDKRichTime
        android:id="@+id/mdkRichTime_withLabelAndMandatory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mdk:label="@string/app_name"
        mdk:mandatory="true" />

    <View
        android:background="@drawable/separator_background"
        android:layout_width="match_parent"
        android:layout_height="4dp" />

    <com.soprasteria.movalysmdk.widget.basic.MDKDateTime
        android:id="@+id/mdkRichDateTime_withLabelAndMandatoryAndSharedError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        mdk:mode="time"
        mdk:mandatory="true"
        mdk:errorId="@+id/errorText"
        mdk:rootId="@id/root" />

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <View
        android:background="@drawable/separator_background"
        android:layout_width="match_parent"
        android:layout_height="4dp" />
</LinearLayout>
