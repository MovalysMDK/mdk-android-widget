<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soprasteria.movalysmdk.widget.sample.DateActivity">

    <!--
     Remove paddingTop from the ScrollView as Espresso is unable to take account of padding in scrollTo method.
    android:paddingTop="@dimen/activity_vertical_margin"
    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/button_bar" />

        <!-- RichDateTime with label, no hint -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_case_1" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
            android:id="@+id/mdkRichDateTime_withLabelAndMandatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <!-- RichDate -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_case_2" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDate
            android:id="@+id/mdkRichDate_withLabelAndMandatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <!-- RichTime -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_case_3" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichTime
            android:id="@+id/mdkRichTime_withLabelAndMandatory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <!-- Inner MDKDateTime widget with error and label outside -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <com.soprasteria.movalysmdk.widget.basic.MDKDateTime
            android:id="@+id/mdkDateTime_withSharedError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            mdk:errorId="@+id/mdkdatetime_errorText"
            mdk:mandatory="true" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/mdkdatetime_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- RICH DATETIME WITHOUT LABEL -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_rich_without_label" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
            android:id="@+id/mdkRichDateTime_withoutLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:mandatory="true" />

        <!-- RICH DATETIME WITH CUSTOM LAYOUT -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_rich_custom_layout" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
            android:id="@+id/mdkRichDateTime_withCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:layout="@layout/custom_date_widget"
            mdk:mandatory="true" />

        <!-- DateTime with minDate and datehint-->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_case_5" />

        <com.soprasteria.movalysmdk.widget.basic.MDKDateTime
            android:id="@+id/mdkDateTime_withLabelAndMandatoryAndMinDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:dateFormat="yyyy/MM/dd HH:mm:ss"
            mdk:dateHint="@string/dateHint"
            mdk:errorId="@+id/errorText2"
            mdk:mandatory="true"
            mdk:min="2015/05/12 11:52:33"
            mdk:mode="date" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/errorText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- RichDateTime with label, hint -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_case_6" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
            android:id="@+id/mdkRichDateTime_withLabelAndMandatoryAndHints"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:dateHint="@string/dateHint"
            mdk:label="@string/app_name"
            mdk:mandatory="true"
            mdk:timeHint="@string/timeHint" />

        <!-- RichDateTime with label, no hint -->
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/date_non_editable" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichDateTime
            android:id="@+id/mdkRichDateTime_non_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:readonly="true"
            mdk:label="@string/app_name" />

    </LinearLayout>
</ScrollView>
