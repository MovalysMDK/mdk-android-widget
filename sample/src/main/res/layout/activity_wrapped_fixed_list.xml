<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soprasteria.movalysmdk.widget.sample.FixedListActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/button_bar"/>

        <com.soprasteria.movalysmdk.widget.fixedlist.MDKRichFixedList
            android:id="@+id/mdkRichFixedList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true"/>

        <com.soprasteria.movalysmdk.widget.fixedlist.MDKFixedList
            android:id="@+id/mdkFixedList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mdkRichFixedList"
            mdk:label="@string/app_name"/>

    </LinearLayout>

</ScrollView>
