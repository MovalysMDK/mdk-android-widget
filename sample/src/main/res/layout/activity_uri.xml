<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UriActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <include layout="@layout/button_bar"/>

        <!-- RICH EMAIL WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uri_with_label_error" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichUri
            android:id="@+id/mdkRichUri_withLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/uri_background"
            android:padding="2dp"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- INNER EMAIL WITH EXTERNAL ERROR/COMMAND -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/uri_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.basic.MDKUri
            android:id="@+id/mdkUri_withErrorAndCommandOutside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testHintText"
            mdk:errorId="@+id/checkbox_errorText"
            mdk:primaryCommandId="@+id/buttonSend"
            mdk:mandatory="true" />

        <Button
            android:id="@+id/buttonSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/openButtonText" />

        <com.soprasteria.movalysmdk.widget.core.error.MDKErrorTextView
            android:id="@+id/checkbox_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH EMAIL WITH CUSTOM LAYOUT -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_rich_custom_layout" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichUri
            android:id="@+id/mdkRichUri_withCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:layout="@layout/custom_uri_widget"
            mdk:mandatory="true" />

        <!-- RICH EMAILS WITH COMMON ERROR FIELD -->

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <com.soprasteria.movalysmdk.widget.core.error.MDKErrorTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uri_rich_common_error"
            android:id="@+id/textView" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichUri
            android:id="@+id/mdkRichUri1_withSharedError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/mdk_error_message_1"
            mdk:errorId="@+id/commons_error"/>

        <com.soprasteria.movalysmdk.widget.basic.MDKRichUri
            android:id="@+id/mdkRichUri2_withSharedError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/mdk_error_message_2"
            mdk:errorId="@+id/commons_error"/>

        <com.soprasteria.movalysmdk.widget.core.error.MDKErrorTextView
            android:id="@+id/commons_error"
            mdk:errorCentralized="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH EMAIL WITH EXTERNAL HELPER -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/uri_rich_helper_text"
            android:id="@+id/textView2" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichUri
            android:id="@+id/checkbox_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/edit_text_label"
            mdk:helper="@string/uri_helper_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

    </LinearLayout>

</ScrollView>