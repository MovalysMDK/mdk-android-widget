<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.soprasteria.movalysmdk.widget.basic.MDKEmail
        android:id="@id/component_internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        mdk:errorId="@id/component_error"
        mdk:labelId="@id/component_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4F443344"
        android:id="@id/component_label"/>

    <com.soprasteria.movalysmdk.widget.core.error.MDKErrorTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#4F443344"
        android:id="@id/component_error"
        android:layout_gravity="end" />

</LinearLayout>