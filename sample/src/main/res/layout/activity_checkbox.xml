<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckBoxActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <include layout="@layout/button_bar"/>

        <!-- CHECKBOXES -->
        <!-- RICH CHECKBOX WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_with_label_error" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckbox
            android:id="@+id/mdkRichCheckbox_withLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/checkbox_background"
            android:padding="2dp"
            mdk:label="@string/app_name"
            mdk:text_fixed="@string/checkbox_activity"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- INNER CHECKBOX WITH EXTERNAL ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.basic.MDKCheckBox
            android:id="@+id/mdkCheckbox_withErrorAndCommandOutside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/testHintText"
            mdk:errorId="@+id/mdkemail_errorText"
            mdk:text_unchecked="@string/checkable_value_true"
            mdk:text_checked="@string/checkable_value_false"
            mdk:mandatory="true" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/mdkemail_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH CHECKBOX WITHOUT LABEL -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_rich_without_label" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckbox
            android:id="@+id/mdkRichCheckbox_withoutLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:text_unchecked="@string/checkable_value_true"
            mdk:text_checked="@string/checkable_value_false"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH CHECKBOX WITH CUSTOM LAYOUT -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_rich_custom_layout" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckbox
            android:id="@+id/mdkRichCheckbox_withCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:layout="@layout/custom_checkbox_widget"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH CHECKBOX WITH EXTERNAL HELPER -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_rich_helper_text" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckbox
            android:id="@+id/mdkRichEmail_withHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/edit_text_label"
            mdk:helper="@string/checkbox_helper_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH CHECKBOX NON EDITABLE -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_non_editable" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckbox
            android:id="@+id/mdkRichCheckbox_non_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/checkbox_background"
            android:padding="2dp"
            mdk:label="@string/app_name"
            mdk:text_fixed="@string/checkbox_activity"
            mdk:readonly="true" />

    </LinearLayout>

</ScrollView>