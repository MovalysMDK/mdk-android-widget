<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpinnerActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.soprasteria.movalysmdk.widget.sample.SpinnerActivity">

        <include layout="@layout/button_bar" />

        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (no blank row, no custom layout, no hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_1" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, no custom layout, no hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_2" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, no custom layout, has hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_3" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:hint="@string/User_hint_value"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, has same custom layout, has hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_4" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:hint="@string/User_hint_value"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, has two custom layout, has hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_5" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:hint="@string/User_hint_value"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, has same custom layout, no hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_6" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- RICH Spinner WITH LABEL AND ERROR Rich spinner with label and error (has blank row, has two custom layout, no hint) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_7" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:has_blank_row="true"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />
        <!-- INNER Spinner-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKSpinner
            android:id="@+id/MDKSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:errorId="@+id/mdkSpinner_errorText"
            mdk:has_blank_row="true"
            mdk:hint="@string/User_hint_value"
            mdk:label="@string/app_name"
            mdk:mandatory="true" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/mdkSpinner_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="10dp"
            android:background="@drawable/separator_background" />

        <!-- RICH Spinner NOT EDITABLE) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/spinner_not_editable" />

        <com.soprasteria.movalysmdk.widget.spinner.MDKRichSpinner
            android:id="@+id/MDKRichSpinner_not_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:editable="false" />

    </LinearLayout>

</ScrollView>
