<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".MapsActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/enableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="switchEnable"
            android:text="@string/topbar_disablebutton" />

        <!-- EDITABLE RICH ENUMVIEW WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enumimage_editable_with_label_error" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichEnumView
            android:id="@+id/mdkRichEnumImage_withLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:enum_editable="true"
            mdk:label="@string/app_name"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- INNER ENUMVIEW WITH EXTERNAL ERROR/COMMAND -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enumimage_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.basic.MDKEnumView
            android:id="@+id/mdkEnumImage_withErrorAndCommandOutside"
            android:layout_width="match_parent"
            mdk:enum_mode="image"
            android:layout_height="wrap_content"/>

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/enumimage_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- INNER ENUMIMAGE WITH IMAGE SET BY STRING -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enumimage_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.basic.MDKEnumView
            android:id="@+id/mdkEnumImage_withImageSetByString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:enum_editable="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />


        <!-- EDITABLE RICH ENUMVIEW TEXT (NO ENUM) WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enumtext_with_label_error" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichEnumView
            android:id="@+id/mdkRichEnumText_withLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:enum_mode="text"
            mdk:enum_editable="true"
            mdk:label="@string/app_name"/>

    </LinearLayout>

</ScrollView>