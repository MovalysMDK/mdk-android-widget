<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MediaActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <include layout="@layout/button_bar"/>

        <!-- EDITABLE PHOTO -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_editable_with_label_error" />

        <com.soprasteria.movalysmdk.widget.media.MDKMedia
            android:id="@+id/mdkMedia"
            android:layout_width="72dp"
            android:layout_height="72dp"
            mdk:mandatory="false"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- MANDATORY EDITABLE RICH PHOTO WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rich_photo_editable_with_label_error" />

        <com.soprasteria.movalysmdk.widget.media.MDKRichMedia
            android:id="@+id/mdkRichMedia_withLabelAndError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:mandatory="true"
            mdk:thumbnail_width="144dp"
            mdk:thumbnail_height="144dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />



        <!-- ReadOnly PHOTO WITH LABEL AND ERROR -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/photo_readonly" />

        <com.soprasteria.movalysmdk.widget.media.MDKMedia
            android:id="@+id/mdkMedia_readonly"
            android:layout_width="144dp"
            android:layout_height="144dp"
            mdk:readonly="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- MANDATORY EDITABLE RICH PHOTO WITH CUSTOM PLACEHOLDER -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rich_photo_editable_with_placeholder" />

        <com.soprasteria.movalysmdk.widget.media.MDKRichMedia
            android:id="@+id/mdkRichMedia_withCustomPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:placeholder="@drawable/enum_mobileos_android"/>
    </LinearLayout>
</ScrollView>