<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.soprasteria.movalysmdk.widget.sample.ValidatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">


        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/button_bar" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichEditText
            android:id="@+id/mdkRichText_withCustomValidator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/hello_world"
            mdk:hint="@string/hello_world"
            mdk:no_number="true"
            mdk:mandatory="true"/>

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />


        <com.soprasteria.movalysmdk.widget.basic.MDKRichEditText
            android:id="@+id/mdkRichText_nomandatory_withCustomValidator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:hint="@string/hello_world"
            mdk:no_number="true"/>

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />


        <com.soprasteria.movalysmdk.widget.basic.MDKRichEditText
            android:id="@+id/mdkRichText_lenthvalidator_withCustomValidator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:hint="@string/hello_world"
            mdk:no_number="true"
            mdk:maxLength="4"
            mdk:minLength="2"/>

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckable
            android:id="@+id/mdkRichCheckbox_trueValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/checkable_value_true"
            mdk:mandatory_value="true" />

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckable
            android:id="@+id/mdkRichCheckbox_falseValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/checkable_value_false"
            mdk:mandatory_value="false" />

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckable
            android:id="@+id/mdkRichSwitch_trueValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/checkable_value_true"
            mdk:mandatory_value="true"
            mdk:widget="Switch"/>

        <View
            android:background="@drawable/separator_background"
            android:layout_width="match_parent"
            android:layout_height="4dp" />

        <com.soprasteria.movalysmdk.widget.basic.MDKRichCheckable
            android:id="@+id/mdkRichSwitch_falseValidation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/checkable_value_false"
            mdk:mandatory_value="false"
            mdk:widget="Switch"/>

    </LinearLayout>
</ScrollView>