<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".PositionActivity">

    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/button_bar"/>

        <!-- RICH POSITION WITH LABEL, ERROR, DISPLAYING LOCATION -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_with_label_error_location" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_locationWithLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/position_background"
            android:padding="2dp"
            mdk:label="@string/app_name"
            mdk:mandatory="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITH LABEL, ERROR, DISPLAYING ADDRESSES AND NO MAP BUTTON -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_with_label_error_addresses" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_addressesWithLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/position_background"
            android:padding="2dp"
            mdk:activeGoto="false"
            mdk:label="@string/app_name"
            mdk:mandatory="true"
            mdk:positionMode="address"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITH LABEL, ERROR, DISPLAYING INFO -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_with_label_error_addresses" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_infoWithLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/position_background"
            android:padding="2dp"
            mdk:activeGoto="false"
            mdk:label="@string/app_name"
            mdk:mandatory="true"
            mdk:positionMode="info"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITH LABEL, ERROR, DISPLAYING LOCATION AND WITH AUTO-START -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_with_label_error_auto_start" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_autostartWithLabelAndError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/position_background"
            android:padding="2dp"
            mdk:label="@string/app_name"
            mdk:mandatory="true"
            mdk:autoStart="true"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- INNER POSITION WITH EXTERNAL ERROR/COMMAND -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_standalone_widget" />

        <com.soprasteria.movalysmdk.widget.position.MDKPosition
            android:id="@+id/mdkPosition_withErrorAndCommandOutside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/testHintText"
            mdk:errorId="@+id/position_errorText"
            mdk:locateButtonViewId="@+id/buttonPosition"
            mdk:mandatory="true" />

        <Button
            android:id="@+id/buttonPosition"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/positionButtonText" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/position_errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITHOUT LABEL -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_rich_without_label" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_withoutLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:mandatory="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITH CUSTOM LAYOUT -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/position_rich_custom_layout" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition_withCustomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/app_name"
            mdk:layout="@layout/custom_position_widget"
            mdk:mandatory="true" />

        <!-- RICH POSITIONS WITH COMMON ERROR FIELD -->

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_rich_common_error"
            android:id="@+id/textView" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition1_withSharedError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/mdk_error_message_1"
            mdk:errorId="@+id/commons_error"/>

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/mdkRichPosition2_withSharedError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/mdk_error_message_2"
            mdk:errorId="@+id/commons_error"/>

        <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
            android:id="@+id/commons_error"
            mdk:errorCentralized="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION WITH EXTERNAL HELPER -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_rich_helper_text"
            android:id="@+id/textView2" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/position_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/edit_text_label"
            mdk:helper="@string/position_helper_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/separator_background" />

        <!-- RICH POSITION NON EDITABLE -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/position_non_editable"
            android:id="@+id/textView3" />

        <com.soprasteria.movalysmdk.widget.position.MDKRichPosition
            android:id="@+id/position_non_editable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            mdk:label="@string/edit_text_label"
            mdk:editable="false" />


    </LinearLayout>

</ScrollView>