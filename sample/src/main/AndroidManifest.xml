<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soprasteria.movalysmdk.widget.sample" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ListWidgetActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmailActivity"
            android:label="@string/email_activity"
            android:parentActivityName=".ListWidgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soprasteria.movalysmdk.widget.sample.ListWidgetActivity" />
        </activity>
        <activity
            android:name=".EditTextActivity"
            android:label="@string/title_activity_edit_text"
            android:parentActivityName=".ListWidgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soprasteria.movalysmdk.widget.sample.ListWidgetActivity" />
        </activity>
        <activity
            android:name=".DateActivity"
            android:label="@string/title_activity_date"
            android:parentActivityName=".ListWidgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soprasteria.movalysmdk.widget.sample.ListWidgetActivity" />
        </activity>
        <activity
            android:name=".ValidatorActivity"
            android:label="@string/title_activity_validator"
            android:parentActivityName=".ListWidgetActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soprasteria.movalysmdk.widget.sample.ListWidgetActivity" />
        </activity>
        <activity
            android:name=".RichSelectorActivity"
            android:label="@string/title_activity_rich_selector"
            android:parentActivityName=".ListWidgetActivity"  >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.soprasteria.movalysmdk.widget.sample.ListWidgetActivity" />
        </activity>
    </application>

</manifest>
