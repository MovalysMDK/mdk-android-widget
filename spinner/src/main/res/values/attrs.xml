<resources>

    <declare-styleable name="MDKWidgetStyle">
        <attr name="mdkValueSpinnerStyle" format="reference" />
        <attr name="mdkSpinnerStyle" format="reference" />
        <attr name="mdkSpinnerDropDownStyle" format="reference" />

        <!-- component spinner attributes -->
        <attr name="mdk_b_spinnerTextColor" format="reference" />
        <attr name="mdk_b_spinnerTextSize" format="reference" />
        <attr name="mdk_b_spinnerTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_spinnerBackground" format="reference" />
        <attr name="mdk_b_spinnerTint" format="reference" />

        <!-- component spinnerDropDown attributes -->
        <attr name="mdk_b_spinnerDropDownTextColor" format="reference" />
        <attr name="mdk_b_spinnerDropDownTextSize" format="reference" />
        <attr name="mdk_b_spinnerDropDownTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_spinnerDropDownBackground" format="reference" />
        <attr name="mdk_b_spinnerDropDownTint" format="reference" />
    </declare-styleable>

    <!-- MDKSpinner specific attributes -->
    <declare-styleable name="MDKCommons.MDKSpinnerComponent">
        <attr name="hasBlankRow" format="boolean" />
    </declare-styleable>
</resources>