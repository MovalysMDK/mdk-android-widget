<resources>

    <declare-styleable name="MDKWidgetStyle">
        <attr name="mdkValueMapsStyle" format="reference" />

        <!-- component maps attributes -->
        <attr name="mdk_b_mapsTextColor" format="reference" />
        <attr name="mdk_b_mapsTextSize" format="reference" />
        <attr name="mdk_b_mapsTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_mapsBackground" format="reference" />
        <attr name="mdk_b_mapsTint" format="reference" />
    </declare-styleable>

    <declare-styleable name="MDKCommons.MDKMapsPositionComponent">
        <attr name="usePicker" format="boolean"/>
        <attr name="zoom" format="integer"/>
        <attr name="gpsMarker" format="reference"/>
        <attr name="addressMarker" format="reference"/>
    </declare-styleable>

</resources>