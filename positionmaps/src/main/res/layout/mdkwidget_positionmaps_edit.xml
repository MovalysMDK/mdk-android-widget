<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    style="?attr/mdkRichLayoutStyle">

    <include layout="@layout/mdkwidget_error_layout" />

    <ImageButton
        android:id="@+id/richmaps_internal_clear"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/component_label"
        android:src="@drawable/ic_clear"
        android:background="@null"/>

    <com.soprasteria.movalysmdk.widget.positionmaps.MDKMapsPosition
        android:id="@id/component_internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/component_label"
        android:layout_toLeftOf="@id/richmaps_internal_clear"
        mdk:clearButtonViewId="@+id/richmaps_internal_clear"
        style="?attr/mdkValueMapsPositionStyle"/>

</merge>
