<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true">

    <FrameLayout
        android:id="@+id/map_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/component_internal_map"
            android:layout_width="match_parent"
            android:layout_height="@dimen/map_thumbnail_height"/>

        <TextView
            android:id="@+id/component_internal_info_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/component_internal_info_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@android:color/white"/>

    </FrameLayout>

    <EditText
        android:id="@+id/component_internal_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_frame"
        android:inputType="numberDecimal|numberSigned"/>

    <EditText
        android:id="@+id/component_internal_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/component_internal_latitude"
        android:inputType="numberDecimal|numberSigned"/>

    <Spinner
        android:id="@+id/component_internal_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/map_frame"
        style="?attr/mdkSpinnerStyle"/>

</merge>