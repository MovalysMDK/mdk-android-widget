<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MDKCommons.MDKPositionComponent">
        <attr name="latitudeTextViewId" format="reference" />
        <attr name="longitudeTextViewId" format="reference" />
        <attr name="addressSpinnerViewId" format="reference" />
        <attr name="locationInfoViewId" format="reference" />
        <attr name="addressInfoViewId" format="reference" />
        <attr name="locateButtonViewId" format="reference" />
        <attr name="mapsButtonViewId" format="reference" />
        <attr name="navButtonViewId" format="reference" />

        <attr name="locateButtonAnimationId" format="reference"/>

        <attr name="latHint" format="string"/>
        <attr name="lngHint" format="string"/>
        <attr name="addressHint" format="string"/>

        <attr name="positionMode" format="enum">
            <enum name="geopoint" value="0"/>
            <enum name="address" value="1"/>
            <enum name="info" value="2"/>
        </attr>

        <attr name="autoStart" format="boolean"/>

        <attr name="activeGoto" format="boolean"/>

        <attr name="timeout" format="integer"/>
    </declare-styleable>

</resources>