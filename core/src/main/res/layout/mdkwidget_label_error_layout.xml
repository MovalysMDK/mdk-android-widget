<!-- !!! NOT USED BY DATE AND DATE TIME !!!-->
<!-- To make component_label below component_internal remove below_view and add "android:layout_below="@id/component_internal"  to component_label-->

<merge xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@id/component_label"
        style="?attr/mdkLabelStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/below_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/component_label" />

    <com.soprasteria.movalysmdk.widget.core.message.MDKMessagesTextView
        android:id="@id/component_error"
        style="?attr/mdkErrorStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/component_internal" />

</merge>
