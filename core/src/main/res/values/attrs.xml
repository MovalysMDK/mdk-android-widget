<resources>

    <declare-styleable name="MDKWidgetStyle">

        <attr name="mdkTintedTextViewStyle" format="reference" />

        <!-- functional attributes for theme -->
        <attr name="mdkLabelStyle" format="reference" />
        <attr name="mdkValueEditTextStyle" format="reference" />
        <attr name="mdkValueDateStyle" format="reference" />
        <attr name="mdkValueCheckBoxStyle" format="reference" />
        <attr name="mdkValueSwitchStyle" format="reference" />

        <attr name="mdkErrorStyle" format="reference" />
        <attr name="mdkPrimaryCommandStyle" format="reference" />
        <attr name="mdkSecondaryCommandStyle" format="reference" />
        <attr name="mdkCommandStyle" format="reference" />
        <attr name="mdkNegativeCommandStyle" format="reference" />
        <attr name="mdkRichLayoutStyle" format="reference" />

        <!-- theme attributes -->
        <attr name="mdk_t_primaryColor" format="reference" />
        <attr name="mdk_t_primaryDarkColor" format="reference" />
        <attr name="mdk_t_accentColor" format="reference" />
        <attr name="mdk_t_textColorPrimary" format="reference" />
        <attr name="mdk_t_textColorSecondary" format="reference" />
        <attr name="mdk_t_smallTextSize" format="reference" />
        <attr name="mdk_t_mediumTextSize" format="reference" />
        <attr name="mdk_t_largeTextSize" format="reference" />
        <attr name="mdk_t_noBackground" format="reference" />
        <attr name="mdk_t_commandWidth" format="reference" />
        <attr name="mdk_t_commandHeight" format="reference" />

        <!-- component label attributes -->
        <attr name="mdk_b_labelTextColor" format="reference" />
        <attr name="mdk_b_labelTextSize" format="reference" />
        <attr name="mdk_b_labelTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_labelBackground" format="reference" />

        <!-- component edit attributes -->
        <attr name="mdk_b_editTextColor" format="reference" />
        <attr name="mdk_b_editTextSize" format="reference" />
        <attr name="mdk_b_editTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_editBackground" format="reference" />
        <attr name="mdk_b_editTint" format="reference" />

        <!-- component date attributes -->
        <attr name="mdk_b_dateTextColor" format="reference" />
        <attr name="mdk_b_dateTextSize" format="reference" />
        <attr name="mdk_b_dateTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_dateBackground" format="reference" />
        <attr name="mdk_b_dateTint" format="reference" />

        <!-- component checkbox attributes -->
        <attr name="mdk_b_checkboxTextColor" format="reference" />
        <attr name="mdk_b_checkboxTextSize" format="reference" />
        <attr name="mdk_b_checkboxTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_checkboxBackground" format="reference" />
        <attr name="mdk_b_checkboxTint" format="reference" />

        <!-- component switch attributes -->
        <attr name="mdk_b_switchTextColor" format="reference" />
        <attr name="mdk_b_switchTextSize" format="reference" />
        <attr name="mdk_b_switchTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_switchBackground" format="reference" />
        <attr name="mdk_b_switchTint" format="reference" />

        <!-- component error attributes -->
        <attr name="mdk_b_errorTextColor" format="reference" />
        <attr name="mdk_b_errorTextSize" format="reference" />
        <attr name="mdk_b_errorTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_errorBackground" format="reference" />
        <attr name="mdk_b_errorTint" format="reference" />

        <!-- component primaryCommand attributes -->
        <attr name="mdk_b_primaryCommandWidth" format="reference" />
        <attr name="mdk_b_primaryCommandHeight" format="reference" />
        <attr name="mdk_b_primaryCommandTint" format="reference" />
        <attr name="mdk_b_primaryCommandBackground" format="reference" />

        <!-- component secondaryCommand attributes -->
        <attr name="mdk_b_secondaryCommandWidth" format="reference" />
        <attr name="mdk_b_secondaryCommandHeight" format="reference" />
        <attr name="mdk_b_secondaryCommandTint" format="reference" />
        <attr name="mdk_b_secondaryCommandBackground" format="reference" />

        <!-- component command attributes -->
        <attr name="mdk_b_commandWidth" format="reference" />
        <attr name="mdk_b_commandHeight" format="reference" />
        <attr name="mdk_b_commandTint" format="reference" />
        <attr name="mdk_b_commandBackground" format="reference" />

        <!-- component negative command attributes -->
        <attr name="mdk_b_negativeCommandWidth" format="reference" />
        <attr name="mdk_b_negativeCommandHeight" format="reference" />
        <attr name="mdk_b_negativeCommandTint" format="reference" />
        <attr name="mdk_b_negativeCommandBackground" format="reference" />

        <!-- component richLayout attributes -->
        <attr name="mdk_b_richLayoutTint" format="reference" />
        <attr name="mdk_b_richLayoutBackground" format="reference" />

    </declare-styleable>

    <declare-styleable name="MDKCommandButton">
        <attr name="referenceWidget" format="reference" />
        <attr name="action" format="reference|string" />
        <attr name="command" format="string" />
    </declare-styleable>

    <declare-styleable name="RichTextView">

        <attr name="android:textColor" />
        <attr name="android:textSize" />
        <attr name="android:ems" />
        <attr name="android:typeface" />
        <attr name="android:fontFamily" />
        <attr name="android:textStyle" />
        <attr name="android:text" />

    </declare-styleable>

    <declare-styleable name="InputView">

        <!-- standard attributes, note android: prefix and no format attribute -->
        <attr name="android:inputType" />

    </declare-styleable>

    <declare-styleable name="MDKCommons">
        <attr name="label" format="reference" />
        <attr name="showFloatingLabelAnim" format="reference" />
        <attr name="hideFloatingLabelAnim" format="reference" />
        <attr name="helper" format="reference" />
        <attr name="layout" />
        <attr name="selectors" format="reference" />
        <attr name="errorId" format="reference" />
        <attr name="labelId" format="reference" />
        <attr name="helperId" format="reference" />
        <attr name="qualifier" format="string" />
        <attr name="mandatory" format="boolean" />
        <attr name="hint" format="reference" />
        <attr name="minLength" format="integer" />
        <attr name="maxLength" format="integer" />
        <attr name="formatter" format="reference" />
        <attr name="clearButtonViewId" format="reference" />
        <attr name="readOnly" format="boolean" />
        <attr name="thumbnailWidth" format="dimension" />
        <attr name="thumbnailHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MDKCommons.MDKCheckableComponent">
        <attr name="mandatoryValue" format="boolean" />
        <attr name="textChecked" format="string" />
        <attr name="textUnchecked" format="string" />
        <attr name="textFixed" format="string" />
    </declare-styleable>

    <!-- MDK state for components -->
    <declare-styleable name="MDKState">
        <attr name="state_error" format="boolean" />
        <attr name="state_valid" format="boolean" />
        <attr name="state_mandatory" format="boolean" />
        <attr name="state_readonly" format="boolean" />
    </declare-styleable>

    <!-- MDKDateTime specific attributes-->
    <declare-styleable name="MDKCommons.MDKDateTimePickerComponent">
        <attr name="dateTextViewId" format="reference" />
        <attr name="timeTextViewId" format="reference" />
        <attr name="mode" format="enum">
            <enum name="date" value="0" />
            <enum name="time" value="1" />
            <enum name="dateTime" value="2" />
        </attr>
        <attr name="dateFormat" format="string" />
        <attr name="timeFormat" format="string" />
        <attr name="min" format="string" />
        <attr name="max" format="string" />
        <attr name="dateHint" format="string" />
        <attr name="timeHint" format="string" />
    </declare-styleable>

    <declare-styleable name="MDKCommons.MDKErrorComponent">
        <attr name="errorsDisplayOrder" format="reference" />
        <attr name="errorCentralized" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MDKCommons.MDKButtonComponent">
        <attr name="primaryCommandId" format="reference" />
        <attr name="secondaryCommandId" format="reference" />
    </declare-styleable>


</resources>