<resources>
    <declare-styleable name="MDKWidgetStyle">
        <attr name="mdkEnumViewStyle" format="reference" />
        <attr name="mdkSeekBarStyle" format="reference" />

        <!-- component enumview attributes -->
        <attr name="mdk_b_enumviewTextColor" format="reference" />
        <attr name="mdk_b_enumviewTextSize" format="reference" />
        <attr name="mdk_b_enumviewTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_enumviewBackground" format="reference" />

        <!-- component seekbar attributes -->
        <attr name="mdk_b_seekbarTextColor" format="reference" />
        <attr name="mdk_b_seekbarTextSize" format="reference" />
        <attr name="mdk_b_seekbarTextStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>
        <attr name="mdk_b_seekbarBackground" format="reference" />
        <attr name="mdk_b_seekbarTint" format="reference" />
    </declare-styleable>

    <!-- MDKSeekBar specific attributes-->
    <declare-styleable name="MDKCommons.MDKSeekBarComponent">
        <attr name="initialSeekBarValue" format="integer" />
        <attr name="minAllowed" format="integer" />
        <attr name="maxAllowed" format="integer" />
        <attr name="seekbarMax" format="integer" />
        <attr name="seekbarMin" format="integer" />
        <attr name="attachedEditText" format="reference" />
        <attr name="readOnlyEditText" format="boolean" />
    </declare-styleable>


    <!-- MDKEnumImage specific attributes -->
    <declare-styleable name="MDKCommons.MDKEnumView">
        <attr name="enumPrefix" format="string" />
        <attr name="enumMode" format="enum">
            <enum name="image" value="0" />
            <enum name="text" value="1" />
        </attr>
    </declare-styleable>


    <!-- MDKPresenterView specific attributes -->
    <declare-styleable name="MDKCommons.MDKPresenterViewComponent">
        <attr name="titleBackground" format="integer" />
        <attr name="titleSize" format="dimension" />
        <attr name="diameter" format="dimension" />
        <attr name="titleColor" format="color" />
    </declare-styleable>
</resources>