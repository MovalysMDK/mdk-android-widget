<resources>

    <style name="MDKWidgetTheme" parent="Theme.AppCompat">
        <item name="mdkSeekBarStyle">@style/MDKValueSeekBar</item>
        <item name="mdkEnumViewStyle">@style/MDKValueEnumView</item>

        <!-- Seekbar business attributes -->
        <item name="mdk_b_seekbarTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_seekbarTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_seekbarTextStyle">normal</item>
        <item name="mdk_b_seekbarBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_seekbarTint">?attr/mdk_t_primaryColor</item>

        <!-- EnumView business attributes -->
        <item name="mdk_b_enumviewTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_enumviewTextSize">?attr/mdk_t_smallTextSize</item>
        <item name="mdk_b_enumviewTextStyle">bold</item>
        <item name="mdk_b_enumviewBackground">@drawable/round_enum_background</item>

    </style>

    <style name="MDKWidgetTheme.Light" parent="Theme.AppCompat.Light">
        <item name="mdkSeekBarStyle">@style/MDKValueSeekBar</item>
        <item name="mdkEnumViewStyle">@style/MDKValueEnumView</item>

        <!-- Seekbar business attributes -->
        <item name="mdk_b_seekbarTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_seekbarTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_seekbarTextStyle">normal</item>
        <item name="mdk_b_seekbarBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_seekbarTint">?attr/mdk_t_primaryColor</item>

        <!-- EnumView business attributes -->
        <item name="mdk_b_enumviewTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_enumviewTextSize">?attr/mdk_t_smallTextSize</item>
        <item name="mdk_b_enumviewTextStyle">bold</item>
        <item name="mdk_b_enumviewBackground">@drawable/round_enum_background</item>

    </style>

    <style name="MDKWidgetTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="mdkSeekBarStyle">@style/MDKValueSeekBar</item>
        <item name="mdkEnumViewStyle">@style/MDKValueEnumView</item>

        <!-- Seekbar business attributes -->
        <item name="mdk_b_seekbarTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_seekbarTextSize">?attr/mdk_t_mediumTextSize</item>
        <item name="mdk_b_seekbarTextStyle">normal</item>
        <item name="mdk_b_seekbarBackground">?attr/mdk_t_noBackground</item>
        <item name="mdk_b_seekbarTint">?attr/mdk_t_primaryColor</item>

        <!-- EnumView business attributes -->
        <item name="mdk_b_enumviewTextColor">?attr/mdk_t_textColorPrimary</item>
        <item name="mdk_b_enumviewTextSize">?attr/mdk_t_smallTextSize</item>
        <item name="mdk_b_enumviewTextStyle">bold</item>
        <item name="mdk_b_enumviewBackground">@drawable/round_enum_background</item>

    </style>


    <!-- MDKSeekBar Style-->
    <style name="MDKValueSeekBar" parent="Base.MDKValue.MDKValueSeekBar">
        <item name="mdkLabelStyle">@style/MDKLabel</item>
        <item name="mdkErrorStyle">@style/MDKError</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:thumbOffset">8dip</item>
        <item name="android:focusable">true</item>
        <!-- TODO -->
    </style>

    <style name="MDKValueEnumView" parent="Base.MDKValue.MDKValueEnumView">
        <item name="android:textColor">?attr/mdk_b_enumviewTextColor</item>
        <item name="android:textSize">?attr/mdk_b_enumviewTextSize</item>
        <item name="android:textStyle">?attr/mdk_b_enumviewTextStyle</item>
        <item name="android:background">?attr/mdk_b_enumviewBackground</item>
    </style>

</resources>