<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="true"
    style="?attr/mdkRichLayoutStyle">

    <include layout="@layout/mdkwidget_error_layout" />

    <com.soprasteria.movalysmdk.widget.core.helper.AlphaButton
        android:id="@+id/component_phoneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@android:drawable/ic_menu_call"
        style="?attr/mdkPrimaryCommandStyle"/>

    <com.soprasteria.movalysmdk.widget.basic.MDKPhone
        android:id="@id/component_internal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/component_phoneButton"
        android:layout_alignParentRight="true"
        android:inputType="phone"
        android:layout_alignBottom="@id/component_phoneButton"
        mdk:primaryCommandId="@id/component_phoneButton"
        mdk:errorId="@id/component_error"
        style="?attr/mdkValueEditTextStyle"/>


</merge>
