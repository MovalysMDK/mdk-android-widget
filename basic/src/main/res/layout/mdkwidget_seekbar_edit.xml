<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdk="http://schemas.android.com/apk/res-auto">

    <include layout="@layout/mdkwidget_error_layout" />

    <EditText
        android:id="@+id/component_seekbar_edittext"
        style="?attr/mdkValueEditTextStyle"
        android:layout_width="@dimen/mdkwidget_seekbar_edittext_width"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/mdkwidget_seekbar_edittext_margin"
        android:layout_marginStart="@dimen/mdkwidget_seekbar_edittext_margin"
        android:gravity="center_horizontal"
        android:inputType="number"
        android:singleLine="true" />


    <com.soprasteria.movalysmdk.widget.basic.MDKSeekBar
        android:id="@id/component_internal"
        style="?attr/mdkSeekBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/component_seekbar_edittext"
        android:layout_alignTop="@id/component_seekbar_edittext"
        android:layout_toLeftOf="@id/component_seekbar_edittext"
        android:layout_toStartOf="@id/component_seekbar_edittext"
        android:maxHeight="1000000dp"
        mdk:attachedEditText="@id/component_seekbar_edittext"
        mdk:errorId="@id/component_error"
        mdk:labelId="@id/component_label" />

</merge>
